{
    "version": 6,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "Debug",
            "inherits": "base",
            "hidden": false,
            "generator": "Unix Makefiles",
            "condition": {
                "type": "anyOf",
                "conditions": [
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Darwin"
                    },
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Linux"
                    }
                ]
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release",
            "inherits": "base",
            "hidden": false,
            "generator": "Unix Makefiles",
            "condition": {
                "type": "anyOf",
                "conditions": [
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Darwin"
                    },
                    {
                        "type": "equals",
                        "lhs": "${hostSystemName}",
                        "rhs": "Linux"
                    }
                ]
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "Debug-Windows",
            "inherits": "base",
            "hidden": false,
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Release-Windows",
            "inherits": "base",
            "hidden": false,
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "Debug",
            "hidden": false,
            "targets": ["docs", "all"]
        },
        {
            "name": "Release",
            "configurePreset": "Release",
            "hidden": false,
            "targets": ["install"]
        },
        {
            "name": "Debug-Windows",
            "configurePreset": "Debug-Windows",
            "hidden": false,
            "targets": ["docs", "ALL_BUILD"],
            "configuration": "Debug"
        },
        {
            "name": "Release-Windows",
            "configurePreset": "Release-Windows",
            "hidden": false,
            "targets": ["install"],
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "Debug",
            "configurePreset": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "Release",
            "configurePreset": "Release",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "Debug-Windows",
            "configurePreset": "Debug-Windows",
            "configuration": "Debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "Release-Windows",
            "configurePreset": "Release-Windows",
            "configuration": "Release",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "Debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "Debug"
                },
                {
                    "type": "build",
                    "name": "Debug"
                },
                {
                    "type": "test",
                    "name": "Debug"
                }
            ]
        },
        {
            "name": "Release",
            "steps": [
                {
                    "type": "configure",
                    "name": "Release"
                },
                {
                    "type": "build",
                    "name": "Release"
                },
                {
                    "type": "test",
                    "name": "Release"
                }
            ]
        },
        {
            "name": "Debug-Windows",
            "steps": [
                {
                    "type": "configure",
                    "name": "Debug-Windows"
                },
                {
                    "type": "build",
                    "name": "Debug-Windows"
                },
                {
                    "type": "test",
                    "name": "Debug-Windows"
                }
            ]
        },
        {
            "name": "Release-Windows",
            "steps": [
                {
                    "type": "configure",
                    "name": "Release-Windows"
                },
                {
                    "type": "build",
                    "name": "Release-Windows"
                },
                {
                    "type": "test",
                    "name": "Release-Windows"
                }
            ]
        }
    ]
}
